<div>
  {{input value=title classNames="title focus-title"}}
  <div class="project">
    {{select-on-focus-input value=projectName classNames="focus-project"}}
    {{#if projectChoices}}
      <div class="project-choices">
        <ul>
          {{#each project in projectChoices}}
            <li {{action "selectProject" project}}>{{project.name}}</li>
          {{/each}}
        </ul>
      </div>
    {{/if}}
  </div>
  <span class="date">
    {{input value=startedAtDay classBinding=":focus-date :datepicker dayIsValid::error"}}
  </span>
  <span class="time">
    {{input value=startedAtHour classBinding=":focus-time startedAtIsValid::error"}}
  </span>
  to
  <span class="time">
    {{input value=finishedAtHour classBinding="finishedAtIsValid::error"}}
  </span>
</div>
<div class="actions">
  <a href="" {{action "restoreEntry"}}>Cancel</a>
</div>
