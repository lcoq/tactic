<div>
  {{input value=title classNames="title focus-title"}}
  <div class="project">
    {{select-on-focus-input value=projectName classNames="focus-project"}}
    {{#if projectChoices}}
      <div class="project-choices">
        <ul>
          {{#each project in projectChoices}}
            <li {{action "selectProject" project}}>{{project.name}}</li>
          {{/each}}
        </ul>
      </div>
    {{/if}}
  </div>
  <span class="date">
    {{input value=startedAtDayOneWay focus-out="dayChanged" classBinding="dayIsError:error"}}
  </span>
  <span class="time">
    {{input value=startedAtHourOneWay focus-out="startedAtHourChanged" classBinding=":focus-time startedAtIsError:error"}}
  </span>
  to
  <span class="time">
    {{input value=finishedAtHourOneWay focus-out="finishedAtHourChanged" classBinding="finishedAtIsError:error"}}
  </span>
</div>
<div class="actions">
  <a href="" {{action "restoreEntry"}}>Cancel</a>
</div>
